<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SolicitedName">


    <TextView
        android:id="@+id/tituloApp"
        android:layout_width="243dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:text="@string/welcome"
        android:textColor="#00FF00"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/verdana"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="277dp"
        android:layout_height="69dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="@string/Prepare"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tituloApp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Complete"
        android:textColor="#00FF00"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nameWText"
        app:layout_constraintEnd_toStartOf="@+id/infoView"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.231" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/one"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nameWText"
        app:layout_constraintEnd_toStartOf="@+id/infoView"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.265" />

    <EditText
        android:id="@+id/nameWText"
        android:layout_width="337dp"
        android:layout_height="56dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:background="@drawable/registro_nombre"
        android:hint="@string/name_register"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="337dp"
        android:layout_height="54dp"
        android:layout_marginBottom="100dp"
        android:text="@string/resgister"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_button"
       />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/dispositivosImgane"
        app:layout_constraintBottom_toTopOf="@+id/tituloApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646"
        app:srcCompat="@drawable/dispositivos" />


    <ImageButton
        android:id="@+id/infoView"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="38dp"
        android:background="#00777777"
        android:contentDescription="@string/Imagesig"
        app:layout_constraintBottom_toTopOf="@+id/nameWText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.595"
        app:srcCompat="@drawable/signo" />


</androidx.constraintlayout.widget.ConstraintLayout>