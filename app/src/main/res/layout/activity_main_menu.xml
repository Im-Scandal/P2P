<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:paddingHorizontal="42dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/perfilButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="Botón de configuración de perfil"
            app:srcCompat="@drawable/icon_park_outline_user"
            android:background="@drawable/boton_perfil"
            android:layout_gravity="right"
            android:layout_marginBottom="60dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dispositivos" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multisaltos"
            android:textColor="@color/verde"
            android:textSize="30sp"
            android:fontFamily="@font/verdanabold"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/companero_ideal"
            android:textColor="@color/blanco_texto"
            android:textSize="18sp"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:layout_marginTop="90sp"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mantente_salvo"
            android:textColor="@color/verde"
            android:textSize="30sp"
            android:fontFamily="@font/verdanabold"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="100sp"/>

        <Button
            android:id="@+id/helpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pedir_ayuda"
            android:background="@drawable/boton_rojo"
            android:textColor="@color/blanco_texto"
            android:textSize="20sp"
            android:fontFamily="@font/verdanabold"
            android:textStyle="bold"
            android:layout_marginBottom="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="30sp">

            <ImageButton
                android:id="@+id/bibliotecaButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Botón de biblioteca"
                app:srcCompat="@drawable/icono_biblioteca"
                android:background="#00777777"
                android:paddingHorizontal="9dp"
                android:paddingVertical="8dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>